body {
    background-color: #f8f9fa;
    padding-bottom: 40px;
}

.container {
    max-width: 800px;
}

.card {
    border-radius: 10px;
    border: none;
    margin-bottom: 30px;
}

header {
    margin-bottom: 30px;
}

.list-group-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.remove-record {
    cursor: pointer;
    color: #dc3545;
}

.remove-record:hover {
    color: #a71d2a;
}

.spinner-border {
    margin-right: 8px;
    width: 1rem;
    height: 1rem;
}

.time-recommendations {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
}

.time-recommendation {
    font-size: 0.8rem;
    padding: 3px 8px;
    border-radius: 12px;
    background-color: #e9ecef;
    cursor: pointer;
}

.time-recommendation:hover {
    background-color: #dee2e6;
}

.date-recommendation {
    font-size: 0.8rem;
    padding: 3px 8px;
    border-radius: 12px;
    background-color: #e9ecef;
    cursor: pointer;
    margin-right: 5px;
    margin-bottom: 5px;
    display: inline-block;
}

.date-recommendation:hover {
    background-color: #dee2e6;
}

.date-recommendations {
    margin-top: 10px;
}
